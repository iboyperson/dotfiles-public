# Completions
_zsh-completions_reload() {
    echo "Updating ZSH Completions..."
    zplugin cclear > /dev/null
    zplugin creinstall zsh-users/zsh-completions > /dev/null
    compinit -C
}
zplugin ice lucid atpull"_zsh-completions_reload" as"completion"; zplugin light zsh-users/zsh-completions
zplugin ice lucid as"completion"; zplugin light iboyperson/zsh-windscribe-completions
